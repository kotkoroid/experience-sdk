    "@swc/core": "^1.5.7",
    "@swc/helpers": "^0.5.11",
    "@types/bun": "^1.3.3",
    "lefthook": "^2.0.4",
    "nx": "^22.1.3",
    "oxfmt": "^0.15.0",
    "oxlint": "^1.30.0",
    "tslib": "^2.3.0",
    "typescript": "^5.9.2"
  },
  "trustedDependencies": [
    "@swc/core",
    "esbuild",
    "lefthook",
    "nx",
    "sharp",
    "workerd"
