{
  "name": "@kotkoroid/experience-sdk",
  "version": "0.0.0",
  "author": "git@kotkoroid.com",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lefthook install",
    "deps:graph": "nx graph",
    "typecheck": "nx run-many -t typecheck",
    "lint": "oxlint --fix -c ./oxlint.jsonc",
